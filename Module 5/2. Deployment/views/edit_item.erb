<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container py-3">
        <h1>Edit Item</h1>

        <form method="POST" action="/items/edit/<%= item.id %>">
            <div class="mb-3">
                <label for="exampleInputName" class="form-label">Item Name</label>
                <input type="text" name="name" class="form-control" value="<%= item.name %>">
            </div>
            <div class="mb-3">
                <label for="exampleInputPrice" class="form-label">Item Price</label>
                <input type="number" name="price" class="form-control" value="<%= item.price %>">
            </div>

            <select class="form-select" name="category" aria-label="Default select example">
                <% categories.each do |category| %>
                <option <% if item.category.id == category.id %>selected<% end %> value="<%= category.id %>"><%= category.name %></option>
                <% end %>
            </select><br><br>
            <button type="submit">Edit Item</button>
        </form>
    </div>
</body>